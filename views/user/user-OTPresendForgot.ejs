</body>

<script>
// Handle OTP Verification and Resend (POST request)
$('#otpVerificationForm').on('submit', function (e) {
  e.preventDefault(); // Prevent the default form submission

  // Check if the form is for OTP verification or resend based on the action attribute
  const action = $(this).attr('action');

  // Make an AJAX request to the appropriate endpoint
  $.ajax({
    type: 'POST',
    url: action,
    data: $(this).serialize(), // Serialize form data
    success: function (response) {
      alert(response.message); // Show a success message
    },
    error: function (error) {
      console.error(error);
      alert('Failed to perform the requested action'); // Show an error message
    },
  });
});
  </script>
