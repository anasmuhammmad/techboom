    <script>
        let countdown; // Variable to store the countdown interval
        const timerElement = document.getElementById('timer');
        const resendLink = document.getElementById('resend-link');

        // Function to start the countdown
        function startCountdown(seconds) {
            resendLink.style.display = 'none';
            document.getElementById('countdown-timer').style.display = 'block';

            clearInterval(countdown);
            let remainingTime = seconds;

            countdown = setInterval(() => {
                const minutes = Math.floor(remainingTime / 60);
                const seconds = remainingTime % 60;

                timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;

                if (remainingTime <= 0) {
                    clearInterval(countdown);
                    resendLink.style.display = 'block';
                    document.getElementById('countdown-timer').style.display = 'none';
                    timerElement.textContent = '00:00';
                } else {
                    remainingTime--;
                }
            }, 1000);
        }

        // Function to resend OTP
        function resendOTP() {
            // Make an AJAX request to your server to trigger OTP resend
            fetch('/resend-otp', {
                method: 'POST',
                // You can add headers and data as needed
            })
                .then((response) => {
                    if (response.ok) {
                        // OTP resend successful, start the countdown
                        startCountdown(120); // 2 minutes (adjust as needed)
                    } else {
                        // Handle errors here
                        console.error('OTP resend failed');
                    }
                })
                .catch((error) => {
                    // Handle network errors here
                    console.error('Network error:', error);
                });
        }

        // Attach the click event handler for the resend link
        resendLink.addEventListener('click', resendOTP);
    </script>

