<%- include('../layouts/header')%>
<%- include('../partials/admin-header')%>
<div class="header" style="margin-top: 80px;">
    <h1>Add Brand</h1>
  </div>
  <%- include('../partials/admin-canvas')%>
<div class="container-fluid">
    <div class="row  border-start">
        <main class="px-md-4 icons " style="margin-left: 18%;width: 80%; margin-top: 6%;">
            <div class="row d-flex justify-content-between">
                <div class="col-md-8">
                    <h1 class="mt-5">ADD BRAND</h1>
                    <form action="/admin/addbrand" method="post" class="bg-white" onsubmit="return validateForm()>
                        <div class="form-group">
                            <label for="brandname">Brand Name:</label>
                            <input
                                type="text"
                                name="Name"
                                class="form-control bg-light"
                                id="categoryName"
                                placeholder="Enter Brand name"
                                required
                            />
                        </div><br><br>
                        <button type="submit" class="btn btn-primary ms-3">Add Brand</button>
                    </form>
                </div>
            </div>
        </main>
    </div>
</div> 

<script>
    function validateForm() {
        const brandName = document.getElementById('categoryName').value.trim();

        if (brandName === "") {
            alert('Brand Name cannot be empty or contain only whitespace.');
            return false; // Prevent form submission
        }

        return true; // Allow form submission if validation passes
    }
</script>

